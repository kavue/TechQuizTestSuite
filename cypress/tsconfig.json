{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["cypress", "node", "jest", "@cypress/react18","@testing-library/cypress"],
    "isolatedModules": false,
    "noEmit": true,
    "composite": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": ["**/*.tsx", "**/*.ts", "**/*.js", "**/*.jsx", "../client/src/**/*", "node_modules/@cypress/react18/**/*"]
}
